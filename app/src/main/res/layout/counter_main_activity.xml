<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111213"
    tools:context=".QuizMainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/livesLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/score_view_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/life1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/first_life"
                android:src="@drawable/ic_heart_red_vector" />

            <ImageView
                android:id="@+id/life2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/second_life"
                android:src="@drawable/ic_heart_red_vector" />

            <ImageView
                android:id="@+id/life3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/third_life"
                android:src="@drawable/ic_heart_red_vector" />
        </LinearLayout>

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/score_view_background"
            android:contentDescription="@string/score"
            android:gravity="center"
            android:text="00"
            android:textColor="#EBEBEB"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/livesLinearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/livesLinearLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/questionLinearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="320dp"
            android:layout_height="22dp"
            android:max="3"
            android:progress="2"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <TextView
            android:id="@+id/questionView"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:textColor="#EBEBEB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/questionImage"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLinearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionLinearLayout">

        <LinearLayout
            android:id="@+id/answer_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/answer1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Answer 1"
                android:textColor="#EBEBEB"
                android:textStyle="bold"
                android:textSize="12sp"
                app:strokeColor="#EBEBEB"
                app:cornerRadius="10dp"
                app:strokeWidth="3dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/answer2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Answer 2"
                android:textColor="#EBEBEB"
                android:textStyle="bold"
                android:textSize="12sp"
                app:strokeColor="#EBEBEB"
                app:cornerRadius="10dp"
                app:strokeWidth="3dp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/answer3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Answer 3"
                android:textColor="#EBEBEB"
                android:textStyle="bold"
                android:textSize="12sp"
                app:strokeColor="#EBEBEB"
                app:cornerRadius="10dp"
                app:strokeWidth="3dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/answer4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Answer 4"
                android:textColor="#EBEBEB"
                android:textStyle="bold"
                android:textSize="12sp"
                app:strokeColor="#EBEBEB"
                app:cornerRadius="10dp"
                app:strokeWidth="3dp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>